// Problem 5: Given the days of the week in short format "Sun", "Mon" ... print in long format "Sunday", "Monday",

// here you can cheak days one by one
days="sat";

switch(days){
    case "sun":
    console.log("sunday");
    break;

    case"mon":
    console.log("monday");
    break;

    case"tues":
    console.log("tuesday");
    break;

  case"wed":
    console.log("wednesday");
    break;

    case"thrudsay":
    console.log("thrusday");
    break;

    case"friday":
    console.log("friday");
    break;

    case"sat":
    console.log("saturday");
    break;
}